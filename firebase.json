{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/api/verifyGoogleIdToken",
        "function": {
          "functionId": "verifyGoogleIdToken",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/verifyPurchase",
        "function": {
          "functionId": "verifyPurchase",
          "region": "us-central1"
        }
      }
    ]
  }
}
